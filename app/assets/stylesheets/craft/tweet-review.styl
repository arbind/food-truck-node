.twitter-timeline
  width 325px

.yelp-reviews
  width 325px

.tweet, .yelp-review
  position relative
  padding 12px
  height 162px
  a
    color #999
    text-decoration none
    &:hover
      text-decoration underline
  .vcard.author
    position relative
    display block
    min-height 35px
    overflow hidden
    margin-top -2px
    text-shadow none
    font normal normal normal 12px/16px "Helvetica Neue",Arial,sans-serif
    .avatar
      position absolute
      top 1px
      left 0px
      width 32px
      height 32px

      img
        width 32px
        height 32px
        -webkit-border-radius 5px
           -moz-border-radius 5px
            -ms-border-radius 5px
             -o-border-radius 5px
                border-radius 5px          
    .fn
      float left
      padding-left 42px
      color #333
      font-weight bold
      font-size 14px
      line-height 18px
    a hover .fn
      text-decoration underline
    .screen-name, .star-rating
      clear both
      float left
      padding-left 42px
      display block
      line-height 18px
    .screen-name
      line-height 18px
    .star-rating
      width 84px
      height 17px
      img
        width 84px
        height 17px
  .entry
    display block
    font-size 16px
    margin 7px 5px 6px 0
  .footer
    position absolute
    padding-top 2px
    width 90%
    bottom 8px
    font normal normal normal 12px/16px "Helvetica Neue",Arial,sans-serif
    color #999
    .how-long-ago
      display inline-block
    .view-details
      float right


.tweet .footer .how-long-ago
  color #0084B4

.yelp-review .footer .how-long-ago
  color #C41200
