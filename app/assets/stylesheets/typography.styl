/*  Typography
    ----------  */

textFontFamily = 'Nunito', sans-serif
headerFontFamily = 'Patua One', sans-serif
body
  font 1.4rem/2.0rem textFontFamily /* 14px/20px */
  -webkit-text-size-adjust 100% /* dont auto-adjust font-sizes (mobile safari) */

input, textarea, keygen, select, button, isindex
  font-family headerFontFamily

h1, .h1, h2, .h2, h3, .h3
  margin 1.0rem 0
  line-height 4.0rem       /* 40px */
  font-family headerFontFamily
  font-weight bold

h4, .h4, h5, .h5, h6, .h6
  margin 1.0rem 0
  line-height 2.0rem       /* 20px */
  font-family headerFontFamily
  font-weight bold

h1, .h1 { font-size: 3.85rem; } /* 38.5px */
h2, .h2 { font-size: 3.15rem; } /* 31.5px */
h3, .h3 { font-size: 2.45rem; } /* 24.5px */
h4, .h4 { font-size: 1.75rem; } /* 17.5px */
h5, .h5 { font-size: 1.40rem; } /* 14.0px */
h6, .h6 { font-size: 1.19rem; } /* 11.9px */
